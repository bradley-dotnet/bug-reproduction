{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=GrindstoneTest;Trusted_Connection=True;"
  },
  "AllowedLogins": [],
  "AllowedHosts": "*",
  "IdentityServer": {
    "IssuerUri": "urn:grindstonetogoals.com",
    "Clients": [
      {
        "Enabled": true,
        "ClientId": "grindstone-web",
        //"ClientSecrets": [ { "Value": "<Insert Sha256 hash of the secret encoded as Base64 string>" } ],
        "RequireClientSecret": false, // TODO: Remove
        "AllowOfflineAccess": true,
        "AllowedGrantTypes": [ "authorization_code" ],
        "AllowedScopes": [ "grindstone", "openid", "profile", "offline_access" ],
        "RedirectUris": [ "https:\/\/localhost:44308", "https:\/\/localhost" ]
      }
    ]
  }
}

/* To override with local settings, add a new appsettings.Local.json file and add "ConnectionStrings" with a new value.

appsettings.Local.json:
